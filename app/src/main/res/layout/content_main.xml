<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.asde.carbluetoothcontrol.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/connect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conectar"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/forward_button"
        android:layout_marginTop="98dp" />

    <Button
        android:id="@+id/forward_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADELANTE"
        android:layout_above="@+id/right_button"
        android:layout_alignStart="@+id/backward_button"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/left_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IZQUIERDA"
        android:layout_alignBaseline="@+id/right_button"
        android:layout_alignBottom="@+id/right_button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="66dp" />

    <Button
        android:id="@+id/right_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DERECHA"
        android:layout_above="@+id/backward_button"
        android:layout_toEndOf="@+id/backward_button"
        android:layout_marginBottom="27dp" />

    <Button
        android:id="@+id/backward_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ATRAS"
        android:layout_marginBottom="113dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/left_button" />
</RelativeLayout>
